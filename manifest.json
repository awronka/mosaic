{
	"manifest_version": 2,
	
	"name": "Mosaic",
	"description": "An extension that shows the DOM structure and their selectors to help with CSS manipulation",
	"version": "1.0",

	"browser_action": {
		"default_icon": {
			"38": "images/38-active.png"
		},
		"default_title": "Reveal DOM"
	},

	"web_accessible_resources": [
		"css/overlay.css"
	],

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [/*"node_modules/jquery/dist/jquery.min.js",*/"js/content.js"]
		}
	],

	"background": {
		"scripts": [/*"node_modules/jquery/dist/jquery.min.js",*/"js/background.js"]
	},

	"permissions": [
		"tabs",
		"activeTab",
		"webNavigation"
	]
}