{
	"manifest_version": 2,
	
	"name": "Mosaic",
	"description": "An extension that shows the DOM structure and their selectors to help with CSS manipulation",
	"version": "1.0",

	"browser_action": {
		"default_icon": {
			"19": "images/mosaic-19-inactive.png",
			"38": "images/mosaic-38-inactive.png"
		},
		"default_title": "Reveal DOM"
	},

	"web_accessible_resources": [
		"css/overlay.css"
	],

	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},

	"permissions": [
		"activeTab"
	]
}